{
    "manifest_version": 3,
    "name": "Web Content Analyzer",
    "version": "1.0",
    "description": "Analyze web content on hover using LLM",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }